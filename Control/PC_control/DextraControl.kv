#:kivy 1.9.1

<RootWidget>:
    do_default_tab: False
    tab_width: root.width/len(self.tab_list)
    devices: device_list
    status: status_label

    TabbedPanelItem:
        id: tab1
        text: "Connection"
        BoxLayout:
            orientation: "vertical"
            Label:
                id: status_label
                font_size: 50
                text: "Not connected"
                color: 1,0,0,1
            Spinner:
                id: device_list
                text_autoupdate: True
                text: "Select device"
                values: root.serial_port_list
                on_press: root.scan_ports()
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: connect_button
                    text: "Connect to serial"
                    on_release: root.connect_press()
                Button:
                    id: disconnect_button
                    text: "Disconnect"
                    on_release: root.disconnect_press()
    TabbedPanelItem:
        id: tab2
        text: "Control panel"
        BoxLayout:
            orientation: "vertical"
            RelativeLayout:
                id: row_1
                Label:
                    id: abductor_label
                    size_hint_x: None
                    width: 200
                    pos: 0, 0
                    font_size: 20
                    text: "Abductor angle"
                TextInput:
                    id: abductor_text
                    write_tab: False
                    size_hint: None, None
                    size: 100, 40
                    pos: abductor_label.width, (row_1.height-self.height)/2
                    text_width: self._get_text_width(self.text, self.tab_width, self._label_cached)
                    text_height: self.line_height
                    padding: [(self.width-self.text_width)/2,(self.height-self.text_height)/2]
                    multiline: False
                    text: str(root.setpoint_list[0])
                    on_text_validate: root.setpoint_list[0] = float(self.text)
                Slider:
                    id: abductor_slider
                    size_hint_x: None
                    width: root.width - abductor_label.width - abductor_text.width - 40
                    pos: abductor_label.width + abductor_text.width + 20, 0
                    range: (0, 90)
                    value: root.setpoint_list[0]
                    step: 1
                    on_value: root.setpoint_list[0] = float(self.value)
            RelativeLayout:
                id: row_2
                Label:
                    id: thumb_label
                    size_hint_x: None
                    width: 200
                    pos: 0, 0
                    font_size: 20
                    text: "Thumb position"
                TextInput:
                    id: thumb_text
                    write_tab: False
                    size_hint: None, None
                    size: 100, 40
                    pos: thumb_label.width, (row_2.height-self.height)/2
                    text_width: self._get_text_width(self.text, self.tab_width, self._label_cached)
                    text_height: self.line_height
                    padding: [(self.width-self.text_width)/2,(self.height-self.text_height)/2]
                    multiline: False
                    text: str(root.setpoint_list[1])
                    on_text_validate: root.setpoint_list[1] = float(self.text)
                Slider:
                    id: thumb_slider
                    size_hint_x: None
                    width: root.width - thumb_label.width - thumb_text.width - 40
                    pos: thumb_label.width + thumb_text.width + 20, 0
                    range: (-12, 12)
                    value: root.setpoint_list[1]
                    step: 0.5
                    on_value: root.setpoint_list[1] = float(self.value)

            RelativeLayout:
