#:kivy 1.9.1

<RootWidget>:
    orientation: "vertical"

    abductor: abductor_slider
    thumb: thumb_slider
    index: index_slider
    middle: middle_slider
    ring: ring_slider
    pinky: pinky_slider

    RelativeLayout:
        id: row_1
        Label:
            id: abductor_label
            size_hint_x: None
            width: 200
            pos: 0, 0
            font_size: 20
            text: "Abductor angle"
        TextInput:
            id: abductor_text
            size_hint: None, None
            size: 100, 40
            pos: abductor_label.width, (row_1.height-self.height)/2
            text_width: self._get_text_width(self.text, self.tab_width, self._label_cached)
            text_height: self.line_height
            padding: [(self.width-self.text_width)/2,(self.height-self.text_height)/2]
            multiline: False
            text: str(root.slider_values[0])
            on_text_validate: root.slider_values[0] = float(self.text)
        Slider:
            id: abductor_slider
            size_hint_x: None
            width: root.width - abductor_label.width - abductor_text.width - 40
            pos: abductor_label.width + abductor_text.width + 20, 0
            range: (0, 90)
            value: root.slider_values[0]
            step: 1
            on_value: root.slider_values[0] = self.value; root.updateAbductor()
    RelativeLayout:
        id: row_2
        Label:
            id: thumb_label
            size_hint_x: None
            width: 200
            pos: 0, 0
            font_size: 20
            text: "Thumb position"
