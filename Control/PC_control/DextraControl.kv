            text_height: self.line_height
            padding: [(self.width-self.text_width)/2,(self.height-self.text_height)/2]
            multiline: False
            text: str(root.slider_values[1])
            on_text_validate: root.slider_values[1] = float(self.text)
        Slider:
            id: thumb_slider
            size_hint_x: None
            width: root.width - thumb_label.width - thumb_text.width - 40
            pos: thumb_label.width + thumb_text.width + 20, 0
            range: (-12, 12)
            value: root.slider_values[1]
            step: 0.5
            on_value: root.slider_values[1] = self.value; root.updateThumb()

